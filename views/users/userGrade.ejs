<!DOCTYPE html>
<html>

<head>
	<title>高校教学管理平台</title>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
	<link rel="icon" href="/images/favicon.ico" />
	<link rel="stylesheet" type="text/css" href="/dist/semantic.css" />
	<style type="text/css">
		body {
			background-color: #eeeeee;
		}

		.footer.segment {
			padding: 5em 0em;
		}

		.course-title {
			font-weight: bold;
			font-size: medium;
			font-family: "黑体";
			margin: 8px 16px;
		}

		.course-info {
			font-family: "微软雅黑";
			margin: 8px 16px;
		}

		.user-title {
			text-align: center;
			font-size: large;
			font-family: "微软雅黑";
			font-size: 20px;
		}
	</style>
</head>

<body>

	<!-- 导航栏 -->
	<div class="ui menu" style="padding: 15px;">
		<img src="/images/logo.png" style="display: flex; left: auto; margin-left: 30%;" />
		<div class="right menu" style="margin-right: 20%;">
			<div class="item">
				<div class="ui action left icon input">
					<i class="search icon"></i>
					<input type="text" placeholder="搜索感兴趣的课程" />
					<button class="ui positive button">搜索</button>
				</div>
			</div>
			<a class="item">使用教程</a>
			<a class="item">建议反馈</a>
		</div>
	</div>
	<!-- 导航栏 -->


	<div class="ui container" style="margin-top:10px;">
		<div class="ui grid">
			<!-- 首页垂直菜单 -->
			<div class="four wide column">
				<div class="ui vertical menu">
					<div class="ui raised link card">
						<div class="image">
							<img src="/images/avatar200x200.png" />
							<!-- <% if(token.userPhoto==null){ %>
							<img src="/images/avatar200x200.png" />
							<% } else { %>
							<img src="<%= token.userPhoto %>" />
							<% } %> -->
						</div>s
						<div class="content">
							<a class="header"><%= studentNameValue %></a>
							<div class="description">学生</div>
						</div>
					</div>
					<a class="item" id="homePage">
						<i class="home icon"></i>
						首页
					</a>
					<a class="item" id="myClass">
						<i class="file outline icon"></i>
						我的课程
					</a>
					<a class="item" id="myGrade">
						<i class="font icon"></i>
						我的成绩
					</a>
				</div>
			</div>
			<!-- 首页垂直菜单 -->
			<!-- 成绩显示 -->
			<div class="twelve wide column">

				<div class="ui two item menu">
					<a class="item">
						<i class="paper plane outline icon"></i>
						动态
					</a>
					<a class="item">
						<i class="paper plane icon"></i>
						最新内容
					</a>
				</div>
				<div class="ui equal width center aligned padded grid">
					<div class="row" style="background-color:#FFFFFF;color: #000000;">
						<!-- <div class="ui two column centered grid">
                        <div class="column"> -->
						<div class="ui statistics centered">
							<div class="statistic">
								<div class="value">
									<%= firstPartResult.length %>
								</div>
								<div class="label">
									课程数
								</div>
							</div>
							<div class="statistic">
								<div class="value">
									<%= avgGrade %>
								</div>
								<div class="label">
									课程平均成绩
								</div>
							</div>
							<div class="statistic">
								<div class="value">
									<%= maxGrade %>
								</div>
								<div class="label">
									最高分
								</div>
							</div>
						</div>
						<!-- </div>
                    </div> -->
					</div>
				</div>

				<div class="twelve wide column"><br></div>

				<div class="ui equal width center aligned padded grid">
					<div class="row" style="background-color:#FFFFFF;color: #000000;">
						<div class="column">
							<div class="ui one column centered grid">
								<div class="column">
									<table class="ui teal table">
										<thead>
											<tr>
												<th>课程名</th>
												<th>平时成绩</th>
												<th>作业成绩</th>
												<th>考试成绩</th>
												<th>总成绩</th>
											</tr>
										</thead>
										<tbody>
											<% for(var i=0;i<firstPartResult.length;i++){ %>
											<tr>
												<td><%= courseName[i] %></td>
												<td><%= firstPartResult[i].usualGrade %></td>
												<td><%= projectGradeList[i] %></td>
												<td><%= firstPartResult[i].examGrade %></td>
												<td><%= totalGrade[i] %></td>
											</tr>
											<% } %>
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- 成绩显示 -->
		</div>
	</div>

	<!-- 页脚 -->
	<div class="template-footer"></div>
	<!-- 页脚 -->

	<script src="/dist/semantic.js"></script>
	<script src="/javascripts/jquery.js"></script>
	<script src="/javascripts/common.js"></script>
	<script src="javascripts/userGrade.js"></script>
	<script>
		$('#myGrade').click(function () {
			window.location.href = './userGrade';
		});

		$('#homePage').click(function () {
			window.location.href = '/';
		});

		$('#myClass').click(function () {
			window.location.href = '/';
		});
	</script>
</body>

</html>