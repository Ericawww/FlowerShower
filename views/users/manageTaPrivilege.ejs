<!DOCTYPE html>
<html>

<head>
  <title>高校教学管理平台</title>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
  <link rel="icon" href="/images/favicon.ico" />
  <link rel="stylesheet" type="text/css" href="/dist/semantic.css" />
  <style type="text/css">
    body {
      background-color: #eeeeee;
    }

    .footer.segment {
      padding: 5em 0em;
    }
  </style>
</head>

<body>
  <div class="pusher">
    <!-- 导航栏 -->
    <div class="main navBar">

    </div>
    <!-- 导航栏 -->

    <div class="ui container" style="margin-top:10px;">
      <div class="ui grid">
        <!-- 首页垂直菜单 -->
        <div class="four wide column">
          <div class="ui vertical menu">
            <div class="ui raised link card">
              <div class="image">
                <img src="/images/avatar200x200.png" />
              </div>
              <div class="content">
                <a class="header">邢卫</a>
                <div class="description">教师</div>
              </div>
            </div>
            <a class="item" href="/">
              <i class="home icon"></i>
              首页
            </a>
            <a class="item" href="/users">
              <i class="file outline icon"></i>
              我的课程
            </a>
          </div>
        </div>
        <!-- 首页垂直菜单 -->
        <!-- 动态 -->
        <div class="twelve wide column">
          <div class="ui segments" style="background-color: rgb(255, 255, 255);">
            <div class="ui basic segment" style="padding-bottom: 0;">
              <h3 style="margin-left: 5px;">助教管理</h3>
              <div class="ui divider"></div>
            </div>
            <div class="ui basic segment" style="background-color:rgb(255, 255, 255); padding-top: 0;">
              <table class="ui compact celled definition table">
                <thead class="full-width">
                  <tr>
                    <th style="width: 100px;text-align: center;">助教ID</th>
                    <th style="width: 100px;text-align: center;">助教姓名</th>
                    <th style="text-align: center;">拥有权限</th>
                    <th style="text-align: center;">修改权限</th>
                    <th style="text-align: center;">删除助教</th>
                  </tr>
                </thead>
                <tbody id="ass-tb-body">
                  
                </tbody>
                <tfoot class="full-width">
                  <tr>
                    <th colspan="5">
                      <div class="ui right floated small primary labeled icon button" onclick="showTAModal()">
                        <i class="user icon"></i> 添加助教
                      </div>
                    </th>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>
        </div>
        <!-- 动态 -->
      </div>
    </div>

    <!-- 页脚 -->
    <div class="template-footer"></div>
    <!-- 页脚 -->

    <!--助教模态框-->
    <div class="ui modal" id="add-TA-modal">

    </div>
    <!--助教模态框-->

  </div>

  <script src="/javascripts/jquery.js"></script>
  <script src="/javascripts/common.js"></script>
  <script src="/dist/semantic.min.js"></script>
  <script src="/javascripts/header.js"></script>
  <script src="/javascripts/courses/assistantManage.js"></script>


</body>

</html>