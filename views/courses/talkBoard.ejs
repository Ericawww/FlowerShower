<!DOCTYPE html>
<html>
  <head>
    <title>高校教学管理平台</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0"
    />
    <link rel="icon" href="/images/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="/dist/semantic.css" />
    <link rel="stylesheet" href="/swiper/package/css/swiper.min.css" />
    <style type="text/css">
      body {
        background-color: #eeeeee;
      }

      .footer.segment {
        padding: 5em 0em;
      }

      .course-title {
        font-weight: bold;
        font-size: medium;
        font-family: "黑体";
        margin: 8px 16px;
      }

      .course-info {
        font-family: "微软雅黑";
        margin: 8px 16px;
      }

      .user-title {
        text-align: center;
        font-size: large;
        font-family: "微软雅黑";
        font-size: 20px;
      }
    </style>
  </head>

  <body>
    <!-- 导航栏 -->
    <div class="ui menu" style="padding: 15px;">
      <a href="" style="display: flex; left: auto; margin-left: 30%;"
        ><img src="/images/logo.png"
      /></a>
      <div class="right menu" style="margin-right: 20%;">
        <div class="item">
          <div class="ui action left icon input">
            <i class="search icon"></i>
            <input type="text" placeholder="搜索感兴趣的课程" />
            <button class="ui positive button">搜索</button>
          </div>
        </div>
        <a class="item">使用教程</a>
        <a class="item" href="javascript:showMsgBoard()">留言反馈</a>
        <% if (token != null) { %>
        <div class="item image" style="background: none;">
          <div class="ui icon top right pointing dropdown" id="photo-drop">
            <% if (token.userPhoto != null) { %>
            <img
              class="ui circular image"
              src="<%= token.userPhoto %>"
              style="width:32px;"
            />
            <% } else { %>
            <img
              class="ui circular image"
              src="images/user.png"
              style="width:32px;"
            />
            <% } %>
            <div class="menu">
              <div class="item" onclick="clickItem(2)">个人中心</div>
              <div class="item" onclick="clickItem(1)">设置</div>
              <div class="item" onclick="clickItem(0)">注销</div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
    <!-- 导航栏 -->

    <!-- 课程信息 -->
    <div class="ui container">
      <div
        class="ui segment"
        style="margin-top:10px;background-color: rgb(220,220,220);"
      >
        <div class="ui stackable inverted divided equal height stackable grid">
          <div class="four wide column">
            <h2 class="ui header">程序设计方法学</h2>
            <div class="description">
              2019-2020秋 计算机科学与技术学院
            </div>
            <h5 class="ui header">授课老师</h5>
            <div class="description">
              翁恺
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- 课程信息 -->

    <!-- 课程水平菜单 -->
    <div class="ui container" style="margin-top:10px;">
      <div class="ui six item menu">
        <a class="content">
          <a class="item">
            <i class="bell outline icon"></i>
            公告
          </a>
          <a class="item">
            <i class="folder outline icon"></i>
            课件
          </a>
          <a class="item">
            <i class="pencil alternate icon"></i>
            作业
          </a>
          <a class="item">
            <i class="users icon"></i>
            分组学习
          </a>
          <a class="item">
            <i class="clipboard outline icon"></i>
            成绩
          </a>
          <a class="item">
            <i class="comment outline icon"></i>
            讨论
          </a>
        </a>
      </div>
    </div>
    <!-- 课程水平菜单 -->

    <!--学生讨论区-->
    <div class="ui container" style="margin-top:10px;">
      <button class="ui basic button" onclick="showTalkBoard()">
        <i class="add icon"></i>
        发表帖子
      </button>
    </div>
    <!--学生讨论区-->

    <!-- 模态框 -->
    <div class="ui modal">
      <i class="close icon"></i>
      <div class="header">发表帖子</div>
      <div class="content">
        <div class="ui form">
          <div class="field">
            <label>标题<span class="neccessary">*</span></label>
            <input type="text" name="title"" placeholder="不超过32个字符" />
          </div>
          <div class="field">
            <label>内容<span class="neccessary">*</span></label>
            <textarea
              maxlength="250"
              placeholder="不超过300个字符"
              name="content"
            ></textarea>
          </div>
        </div>
      </div>
      <div class="actions">
        <div class="ui red deny button">取消</div>
        <div class="ui positive button" onclick="postTalk()">发表</div>
      </div>
    </div>
    <!-- 模态框 -->
  </body>

  <script src="/javascripts/jquery.js"></script>
  <script src="/dist/semantic.min.js"></script>
  <script src="/javascripts/common.js"></script>
  <script src="/javascripts/check.js"></script>
  <script src="https://cdn.bootcss.com/cropper/3.1.3/cropper.min.js"></script>
  <script src="/javascripts/users/index.js"></script>
  <script>
    var showTalkBoard = () => {
      $(".ui.modal").modal("show");
    };

    var postTalk = () => {
      if (
        $("textarea[name='content']")
          .val()
          .replace(" ", "") == ""
      ) {
        alert("内容不能为空！");
        return;
      }
      if (
        $("input[name='title']")
          .val()
          .replace(" ", "") == ""
      ) {
        alert("标题不能为空！");
        return;
      }
      $.ajax({
        dataType: "json",
        type: "post",
        url: "/talkBoard",
        data: {
          title: $("input[name='title']").val(),
          content: $("textarea[name='content']").val(),
          time: new Date().toGMTString()
        },
        success: data => {
          if (data.status) {
            alert("发表帖子成功!");
            $("textarea[name='content']").val(""); //清空留言内容和联系方式
            $("input[name='title']").val("");
            $(".ui.modal").modal("hide");
          } else {
            alert(data.msg);
          }
        },
        error: err => {
          alert("与服务器连接异常，请稍后再试!");
        }
      });
    };
  </script>
</html>
