<!DOCTYPE html>
<html>

<head>
  <title>高校教学管理平台</title>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
  <link rel="icon" href="/images/favicon.ico" />
  <link rel="stylesheet" type="text/css" href="/dist/semantic.css" />
  <link rel="stylesheet" href="/swiper/package/css/swiper.min.css" />
  <style type="text/css">
    body {
      background-color: #eeeeee;
    }

    .footer.segment {
      padding: 5em 0em;
    }

    .box {
      margin: 60px 10% 100px 10%;
    }

    .course-title {
      font-weight: bold;
      font-size: medium;
      font-family: "黑体";
      margin: 8px 16px;
    }

    .course-info {
      font-family: "微软雅黑";
      margin: 8px 16px;
    }

    .user-title {
      text-align: center;
      font-size: large;
      font-family: "微软雅黑";
      font-size: 20px;
    }
  </style>
</head>

<body>
  <!-- 课程信息 -->
  <div class="ui container">
    <div class="ui segment" style="margin-top:10px;background-color: rgb(220,220,220);">
      <div class="ui stackable inverted divided equal height stackable grid">
        <div class="eight wide column">
          <h2 class="ui header"><%= classHeader.courseName %></h2>
          <div class="description">
            <p><%= dateFormat(classHeader.startTime) %>-<%= dateFormat(classHeader.closeTime) %></p>
            <p> <%= classHeader.courseDept %></p>
          </div>
          <h5 class="ui header">授课老师</h5>
          <div class="description">
            <%= classHeader.userName %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- 课程信息 -->

  <!-- 课程水平菜单 -->
  <div class="ui container" style="margin-top:10px;">
    <div class="ui six item menu">
      <a class="content">
        <a class="item" href="./notice">
          <i class="bell outline icon"></i>
          公告
        </a>
        <a class="item" href="./material">
          <i class="folder outline icon"></i>
          课件
        </a>
        <a class="item" href="./hw/all">
          <i class="pencil alternate icon"></i>
          作业
        </a>
        <a class="item" href="./groupOperation">
          <i class="users icon"></i>
          分组学习
        </a>
        <a class="item  active" href="./courseGrade">
          <i class="clipboard outline icon"></i>
          成绩
        </a>
        <a class="item" href="./talk">
          <i class="comment outline icon"></i>
          讨论
        </a>
      </a>
    </div>
  </div>

  <div class="ui container" style="margin-top: 10px">
    <div class="ui container">
      <div class="ui segment">
        <button class="ui green button" onclick="window.location.href='./courseGradeChange'">
          修改成绩
        </button>
      </div>
    </div>
  </div>

  <div class="ui container" style="margin-top: 10px">
    <table class="ui seven column table">
      <thead>
        <tr>
          <th>序号</th>
          <th>学号</th>
          <th>姓名</th>
          <th>平时成绩</th>
          <th>作业成绩</th>
          <th>考试成绩</th>
          <th>总成绩</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0;i<data.takeTwoGrade.length;i++){ %>
        <tr>
          <td><%= i+1 %></td>
          <td><%= data.takeTwoGrade[i].studentID %></td>
          <td><%= userNameList[i] %></td>
          <td><%= data.takeTwoGrade[i].usualGrade %></td>
          <td><%= data.homeworkGrade[i] %></td>
          <td><%= data.takeTwoGrade[i].examGrade %></td>
          <td><%= studentTotalGrade[i] %></td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <table class="ui black table" style="margin-bottom: 50px;">
      <thead>
        <tr>
          <th>总人数</th>
          <th>平时成绩(平均)</th>
          <th>作业成绩(平均)</th>
          <th>考试成绩(平均)</th>
          <th>总成绩(平均)</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= data.takeTwoGrade.length %></td>
          <td><%= avgUsualGrade %></td>
          <td><%= avgHomeworkGrade %></td>
          <td><%= avgTestGrade %></td>
          <td><%= avgTotalGrade %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <script src="/swiper/package/js/swiper.min.js"></script>
  <script src="/javascripts/jquery.js"></script>
  <script src="/javascripts/header.js"></script>
</body>


</html>