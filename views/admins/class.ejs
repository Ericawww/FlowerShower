  <!--删除教学班模态框-->
  <div class="ui modal delete">
    <div class="header">删除</div>
    <div class="content">
      <p>确定要删除选中的<strong>5</strong>个教学班吗？</p>
    </div>
    <div class="actions">
      <div class="ui cancel button">取消</div>
      <div class="ui approve red button" onclick="deleteClass()">确定</div>
    </div>
  </div>
  <!--删除教学班模态框-->

