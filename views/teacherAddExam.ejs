<!DOCTYPE html>
<html>

<head>
  <title>高校教学管理平台</title>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
  <link rel="icon" href="/images/favicon.ico" />
  <link rel="stylesheet" type="text/css" href="/dist/semantic.css" />
  <link rel="stylesheet" href="/swiper/package/css/swiper.min.css" />
  <style type="text/css">
    body {
      background-color: #eeeeee;
    }

    .footer.segment {
      padding: 5em 0em;
    }

    .course-title {
      font-weight: bold;
      font-size: medium;
      font-family: "黑体";
      margin: 8px 16px;
    }

    .course-info {
      font-family: "微软雅黑";
      margin: 8px 16px;
    }

    .user-title {
      text-align: center;
      font-size: large;
      font-family: "微软雅黑";
      font-size: 20px;
    }
  </style>
</head>

<body>
  <!--添加作业-->
  <!--TODO:添加按钮脚本-->
  <div class="ui container" style="margin-top:10px;">
    <div class="ui segments" style="background-color:rgb(255, 255, 255);">
      <div class="ui basic segment">
        <button class="ui labeled icon button" onclick="javascript:window.location.href='./all'">
          <i class="chevron left icon"></i>返回
        </button>
      </div>
      <div class="ui basic segment">
        <form class="ui form">
          <div class="ui grid">
            <div class="column">
              <div class="field">
                <label><b style="font-size: large;">作业名称</b></label>
                <input type="text" name="homeworkname" placeholder="请输入作业名称" />
              </div>
            </div>
          </div>
          <div class="ui two column grid">
            <div class="row">
              <div class="column">
                <div class="field">
                  <label><b style="font-size: large;">作业开始时间</b></label>
                  <input type="datetime-local" name="startTime" />
                </div>
              </div>
              <div class="column">
                <div class="field">
                  <label><b style="font-size: large;">作业截止时间</b></label>
                  <input type="datetime-local" name="closeTime" />
                </div>
              </div>
            </div>
          </div>
          <div class="ui four column grid">
            <div class="row">
              <div class="column">
                <div class="field">
                  <label><b style="font-size: large;">作业形式</b></label>
                  <select class="ui dropdown" name="isGroupWork">
                    <!-- <option value="">作业形式</option> -->
                    <option value="0">个人作业</option>
                    <option value="1">小组作业</option>
                    <option value="2">在线练习</option>
                  </select>
                </div>
              </div>
              <div class="column"></div>
              <div class="column">
                <div class="field">
                  <label><b style="font-size: large;">作业满分</b></label>
                  <input type="text" name="fullMark" placeholder="请输入作业的满分" style="width:min-content;" />
                </div>
              </div>
            </div>
          </div>
          <div class="ui grid">
            <div class="column">
              <div class="field">
                <label><b style="font-size: large;">作业题目</b></label>
                <div class="ui teal button" onclick="chooseQuestionModal()">选择题目</div>
              </div>
            </div>
          </div>
        </form>
        <div style="height:25px;"></div>
        <div class="actions">
          <div class="ui positive button" onclick="postHw()">添加</div>
          <div class="ui red deny button" onclick="javascript:window.location.href='./'">
            取消
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--添加作业-->

  <!-- 占位 -->
  <div style="height:25px;"></div>
  <!-- 占位 -->

  <div class="ui modal choose">
    <i class="close icon"></i>
    <div class="header">
      创建练习
    </div>
    <div class="ui segment" style="background-color:rgb(255, 255, 255);">
      <table class="ui compact celled definition table">
        <thead class="full-width">
          <tr>
            <th></th>
            <th>题目</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="collapsing">
              <div class="ui checkbox" style="margin-left: 10px;">
                <input type="checkbox">
                <label></label>
              </div>
            </td>
            <td>
              <div class="ui grid">
                <div class="sixteen wide column">
                  <span><b>1</b>.&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;哈哈哈哈</span>
                </div>
              </div>
              <div class="ui grid">
                <div class="column">
                  A.Each
                </div>
              </div>
              <div class="ui grid">
                <div class="column">
                  A.Each
                </div>
              </div>
              <div class="ui grid">
                <div class="column">
                  A.Each
                </div>
              </div>
              <div class="ui grid">
                <div class="column">
                  A.Each
                </div>
              </div>
            </td>
          </tr>
        </tbody>
        <tfoot class="full-width">
          <tr>
            <th></th>
            <th colspan="4">
              <a><button class="ui button"
                  style="margin-left: 86%; width: 13%; background-color: #21b90d; color: white">添加</button></a>
              <div style="display: none;"></div>
            </th>
          </tr>
        </tfoot>
      </table>
    </div>

  </div>

</body>

<script src="/javascripts/jquery.js"></script>
<script src="/dist/semantic.min.js"></script>
<script src="/javascripts/header.js"></script>
<script>
  var chooseQuestionModal = () => {
    $('.ui.modal.choose').modal({ closable: false }).modal("show");
  };
</script>

</html>